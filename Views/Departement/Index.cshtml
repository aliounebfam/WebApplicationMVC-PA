@model List<WebApplicationMVC.Models.DepartementModel>
@{
    ViewData["Title"] = "Departement";
}

<div class="d-flex gap-4 justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Liste des @ViewData["Title"]s de l'UFR SET</h3>
    <button type="button" class="btn btn-primary d-flex align-items-center gap-1 addDepartementModalBtn">

        <svg width="20" height="20" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" viewBox="0 0 24 24">
            <path d="M12 5v14"></path>
            <path d="M5 12h14"></path>
        </svg>
        Ajouter un Département
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departement in Model)
        {
            <tr>
                <td>@departement.code</td>
                <td>@departement.nom</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-info">Détails</button>
                        <a href="@Url.Action("Edit", new { code = departement.code})" class="btn btn-warning">Modifier</a>
                        @* <button type="button" class="btn btn-warning">Modifier</button> *@
                        <a href="@Url.Action("Delete", new { code = departement.code})" class="btn btn-danger">Supprimer</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>