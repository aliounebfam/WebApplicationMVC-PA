@model List<WebApplicationMVC.Models.FiliereModel>
@{
    ViewData["Title"] = "Filière";
}

<div class="d-flex gap-4 justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Liste des @ViewData["Title"]s de l'UFR SET</h3>
    <button type="button" class="btn btn-primary d-flex align-items-center gap-1 addFiliereModalBtn">
        <svg width="20" height="20" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" viewBox="0 0 24 24">
            <path d="M12 5v14"></path>
            <path d="M5 12h14"></path>
        </svg>
        Ajouter une Filière
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Code Département</th>
            <th>Département</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var filiere in Model)
        {
            <tr>
                <td>@filiere.Code</td>
                <td>@filiere.Nom</td>
                <td>@filiere.CodeDepartement</td>
                <td>@(filiere.Departement != null ? filiere.Departement.nom : "")</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", new { code = filiere.Code})" class="btn btn-warning">Modifier</a>
                        <a href="@Url.Action("Delete", new { code = filiere.Code})" class="btn btn-danger">Supprimer</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
